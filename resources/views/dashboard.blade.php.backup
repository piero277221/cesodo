@push('scripts')
<script>
document.addEventListener('DOMContentLoaded', function() {
    console.log('Dashboard cargado');

    // Datos para gráfico de consumos por tipo
    const consumosTipoData = @json($consumosHoy ?? []);
    console.log('Consumos hoy:', consumosTipoData);

    // Gráfico de Consumos por Tipo (Dona)
    if (consumosTipoData && consumosTipoData.length > 0) {
        const ctxTipo = document.getElementById('consumosTipoChart');
        if (ctxTipo) {
            new Chart(ctxTipo.getContext('2d'), {
                type: 'doughnut',
                data: {
                    labels: consumosTipoData.map(item =>
                        item.tipo_comida ? item.tipo_comida.charAt(0).toUpperCase() + item.tipo_comida.slice(1) : 'Sin Tipo'
                    ),
                    datasets: [{
                        data: consumosTipoData.map(item => item.total || 0),
                        backgroundColor: [
                            '#fdcb6e', // Desayuno - Amarillo
                            '#00b894', // Almuerzo - Verde
                            '#2d3436'  // Cena - Gris oscuro
                        ],
                        borderWidth: 3,
                        borderColor: '#fff'
                    }]
                },
                options: {
                    responsive: true,
                    maintainAspectRatio: false,
                    plugins: {
                        legend: {
                            position: 'bottom',
                            labels: {
                                padding: 20,
                                usePointStyle: true,
                                font: {
                                    size: 12
                                }
                            }
                        }
                    }
                }
            });
        }
    }

    // Datos para gráfico de consumos de la semana
    const consumosSemanaData = @json($consumosSemana ?? []);
    console.log('Consumos semana:', consumosSemanaData);

    // Gráfico de Consumos de la Semana (Línea)
    if (consumosSemanaData && consumosSemanaData.length > 0) {
        const ctxSemana = document.getElementById('consumosSemanaChart');
        if (ctxSemana) {
            new Chart(ctxSemana.getContext('2d'), {
                type: 'line',
                data: {
                    labels: consumosSemanaData.map(item => item.dia || 'Sin Fecha'),
                    datasets: [{
                        label: 'Consumos',
                        data: consumosSemanaData.map(item => item.total || 0),
                        borderColor: '#00b894',
                        backgroundColor: 'rgba(0, 184, 148, 0.1)',
                        borderWidth: 3,
                        fill: true,
                        tension: 0.4,
                        pointBackgroundColor: '#00b894',
                        pointBorderColor: '#fff',
                        pointBorderWidth: 3,
                        pointRadius: 6,
                        pointHoverRadius: 8
                    }]
                },
                options: {
                    responsive: true,
                    maintainAspectRatio: false,
                    plugins: {
                        legend: {
                            display: false
                        }
                    },
                    scales: {
                        y: {
                            beginAtZero: true,
                            ticks: {
                                stepSize: 1
                            },
                            grid: {
                                color: 'rgba(0,0,0,0.1)'
                            }
                        },
                        x: {
                            grid: {
                                color: 'rgba(0,0,0,0.1)'
                            }
                        }
                    }
                }
            });
        }
    }
});
</script>
